<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="@color/colorMoreTabShadow" />
            <corners android:topRightRadius="@dimen/dimen_65" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:top="0.5dp" android:right="0.3dp">
        <shape  android:shape="rectangle">

            <solid android:color="@android:color/white" />
            <corners android:topRightRadius="@dimen/dimen_65" />

        </shape>
    </item>
</layer-list>