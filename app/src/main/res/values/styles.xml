<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppTheme.TranslucentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>


    <style name="progressStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorAccent</item>
        <item name="android:calendarTextColor">@android:color/black</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:dayOfWeekBackground">@color/colorAccent</item>
        <item name="android:yearListSelectorColor">@color/colorAccent</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_bg_en</item>
    </style>


    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">@dimen/dimen_10</item>
    </style>


    <style name="NewCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="headerBackground">@color/checkout_color_accent</item>
        <item name="cancelButtonTintColor">@android:color/white</item>
        <item name="cameraTintColor">@color/checkout_color_accent</item>

        <item name="checkoutButtonStyle">@style/NewCheckoutTheme.Button</item>
        <item name="checkoutEditTextStyle">@style/NewCheckoutTheme.EditText</item>
    </style>

    <style name="NewCheckoutTheme.Button" parent="Checkout.Button.Light">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:layout_marginStart">@dimen/dimen_80</item>
        <item name="android:layout_marginEnd">@dimen/dimen_80</item>
        <item name="android:layout_marginBottom">@dimen/dimen_40</item>
        <item name="android:background">@drawable/button_rounded_bg</item>
    </style>

    <style name="NewCheckoutTheme.EditText" parent="Checkout.EditText.Light">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColorHint">@color/colorLabelText</item>
        <item name="android:textColor">@color/colorLabelText</item>
    </style>

</resources>
